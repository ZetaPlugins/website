---
import GitHub from '../../assets/icons/github.svg';
import './TeamSection.scss';

interface TeamMember {
    name: string;
    role: string;
    image: string;
    github: string;
}

const teamMembers: TeamMember[] = [
    {
        name: 'KartoffelChipss',
        role: 'Founder & Developer',
        image: 'https://strassburger.org/img/pp.png',
        github: 'https://github.com/KartoffelChipss',
    },
    {
        name: 'Abb3v',
        role: 'Developer & Support',
        image: '/img/avatars/abb3v.png',
        github: 'https://github.com/abb3v',
    },
    {
        name: 'Aurorus',
        role: 'Developer & Support',
        image: '/img/avatars/aurorus.png',
        github: 'https://github.com/aurorusmc',
    },
];
---

<section class="team">
    <h2>## Our Team</h2>
    <div class="members">
        {
            teamMembers.map((member) => (
                <div class="member">
                    <img
                        src={member.image}
                        alt={`${member.name}'s profile picture`}
                        class="pp"
                        loading="lazy"
                    />
                    <div class="textsec">
                        <h3>{member.name}</h3>
                        <p class="role">{member.role}</p>
                        <a
                            class="githublink"
                            href={member.github}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <img src={GitHub.src} alt="GitHub logo" />
                            GitHub
                        </a>
                    </div>
                </div>
            ))
        }
    </div>
</section>
